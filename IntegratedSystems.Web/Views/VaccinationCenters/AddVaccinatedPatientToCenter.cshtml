@model IntegratedSystems.Domain.DTO.AddVaccinatedPatientDTO

<div class="container">
    <form method="post" asp-action="AddVaccinatedPatientToCenter">

        <input type="hidden" asp-for="CenterId" class="form-control" />

        <div class="row mt-4">
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="datetime-local" asp-for="Date" class="form-control" />
            </div>
        </div>

        <div class="row mt-4">
            <div class="form-group">
                @Html.DropDownListFor(x => Model.PatientId, new SelectList(Model.Patients, "Id", "FirstName"), new { @class = "form-control" })
            </div>
        </div>

        <div class="row mt-4">
            <button type="submit" class="btn btn-success">Add Vaccinated Patient</button>
        </div>
    </form>

</div>
